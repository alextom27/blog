{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1>Articles</h1>
            </div>
            <div class="row">
                <div class="col">
                    {{ dump(categories) }}
                    {{ dump(articles) }}
                    {% for category in categories %}
                        {{ category.name }} : {{ category.articles }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}