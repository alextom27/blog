{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col">
                <h3>Articles</h3>

                <p><a href="{{ path('article_new') }}">Create new</a></p>
            </div>
        </div>


        <div class="row">
            {% for article in articles %}
                <div class="col-4">
                    <h4>{{ article.id }}</h4>
                    <h3>{{ article.title }}</h3>
                    {{ article.content }}

                    <a href="{{ path('article_show', {'id': article.id, 'slug': article.slug}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </div>

            {% else %}
                no records found
            {% endfor %}
        </div>


    </div>

{% endblock %}
