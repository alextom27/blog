{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <h3>Articles</h3>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <a href="{{ path('homepage') }}">
                    Back to homepage.
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h4>{{ article.id }} / {{ article.title }}</h4>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <p>{{ article.content }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <a href="{{ path('article_index') }}">back to list</a>
            </div>
            <div class="col">
                <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
            </div>
            <div class="col">
                {{ include('article/_delete_form.html.twig') }}
            </div>
        </div>

    </div>


{% endblock %}
